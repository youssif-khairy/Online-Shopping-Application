<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shoeses_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/s1" />

    <TextView
        android:id="@+id/shoes_title"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:gravity="top|center_horizontal"
        android:text="Nike "
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/shoes_cost"
        android:layout_toEndOf="@+id/shoes_cost" />

    <TextView
        android:id="@+id/shoes_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shoeses_iv"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/shoeses_iv"
        android:layout_toRightOf="@+id/shoeses_iv"
        android:text="40$" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:layout_above="@+id/shoes_cost"
        android:layout_alignLeft="@+id/shoes_cost"
        android:layout_alignStart="@+id/shoes_cost" />

    <EditText
        android:id="@+id/shoes_count"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <Button
        android:id="@+id/add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Add To Cart"
        android:layout_alignBottom="@+id/shoes_count"
        android:layout_toRightOf="@+id/shoes_count"
        android:layout_toEndOf="@+id/shoes_count"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

</RelativeLayout>